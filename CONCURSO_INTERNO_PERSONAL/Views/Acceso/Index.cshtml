@model Usuario
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/login.css"/>
</head>
<body class="bg d-flex justify-content-center align-items-center">
    <div class="container-fluid">
        <div class="card offset-sm-4">
            <label class="login">Iniciar Sesión</label>
            <form asp-controller="Acceso" asp-action="Index" method="post">
                <div class="inputBox mb-3">
                    <input type="email" asp-for="Correo" required="required">
                    <span class="user">Correo</span>
                </div>
                <div class="inputBox mb-3">
                    <input type="password" asp-for="Clave" required="required">
                    <span>Contraseña</span>
                </div>

                <button class="enter" type="submit">Ingresar</button>
            </form>
        </div>
    </div>
</body>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</html>

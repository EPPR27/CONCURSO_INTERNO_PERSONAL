@model CONCURSO_INTERNO_PERSONAL.Models.VMPrueba.PruebaVM

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/estilos_prueba_input.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/lib/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@1,300;1,900&display=swap" rel="stylesheet">
</head>
<body>
    <div class="contenedor">
        
        <form asp-action="Pregunta_detalle" class="row crear_preguntas was-validated" asp-controller="Prueba" method="post" novalidate>
            <div class="titulo_formulario">

                <h1>CREAR PREGUNTA</h1>




            </div>
            
            <div class="crearPregunta">
                <div class="  pregunta_crearPregunta position-relative">
                    <label>Pregunta</label>
                    <input class="form-control" asp-for="Prueba.oPregunta.Enunciado" id="validationTooltip01" required type="text" />
                    
                </div>
                <div class="pregunta_input">
                    <div class="crearPregunta_1">
                        <div class="crearPregunta_input position-relative">
                            <label>Alternativa A</label>
                            <input class="form-control" asp-for="Prueba.oPregunta.OpcionA" id="validationTooltip02" required type="text" />

                        </div>
                        <div class="crearPregunta_input position-relative">
                            <label>Alternativa B</label>
                            <input class="form-control" asp-for="Prueba.oPregunta.OpcionB" id="validationTooltip03" required type="text" />

                        </div>
                   </div>
                   <div >
                        <div class="crearPregunta_input  position-relative">
                            <label>Alternativa C</label>
                            <input class="form-control" asp-for="Prueba.oPregunta.OpcionC" id="validationTooltip04" required type="text" />

                        </div>
                        <div class="crearPregunta_input position-relative">
                            <label>Alternativa D</label>
                            <input class="form-control" asp-for="Prueba.oPregunta.OpcionD" id="validationTooltip05" required type="text" />

                        </div>
                   </div>
                </div>
            </div>
            <div class="respuesta">



                <div class=" crearPregunta_input position-relative">
                    <label asp-for="Prueba.oPregunta.RespuestaCorrecta">Respuesta Corecta</label>
                    <input class="form-control" asp-for="Prueba.oPregunta.RespuestaCorrecta" pattern="^[A-Za-z]$" maxlength="1" id="validationTooltip06" required type="text" />
                </div>

                <div class=" crearPregunta_input position-relative">
                    <label asp-for="Prueba.Puntaje">Puntaje</label>
                    <input class="form-control" asp-for="Prueba.Puntaje" id="validationTooltip07" pattern="^[1-9]$" required type="text" />

                </div>
           </div>
            <div> 

            




            <div class="botones   ">
                    <button style="background:#029052;" class="col" type="submit">Generar</button>
                    <button style="background:#612466;" class="col btn-secondary" asp-action="Prueba_index" asp-controller="Prueba" type="submit">Volver</button>
            </div>
        </form>
    </div>
    
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/sweetalert2/sweetalert2.all.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script>
        $(document).ready(function () {
            var errorMessage = '@Html.Raw(TempData["ErrorMessage"])';

            if (errorMessage !== '') {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: errorMessage,
                });
            }
        });
    </script>
</body>
</html>
